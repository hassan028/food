<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback_activity">
    <TextView
        android:id="@+id/titleName"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:padding="10sp"
        android:gravity="center_vertical"
        android:textSize="22sp"
        android:text="Feedback"
        android:textColor="@color/white"
        android:background="?themeColor1"/>

    <ListView
        android:id="@+id/feedbackList"
        android:layout_below="@+id/titleName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp" />

    <ImageButton
        android:id="@+id/addFeedback"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/add"
        android:background="@drawable/circle"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:onClick="addFeedback"
        android:autofillHints="Add Feedback"
        />

</RelativeLayout>